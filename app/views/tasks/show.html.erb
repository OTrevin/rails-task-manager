<h2><%= @task.title %></h2>
<%= link_to "Edit this task", edit_task_path(@task) %>
<div>
  <p><%= @task.details %></p>
</div>
<div>
  <% if @task.completed == true %>
    <input type="checkbox" checked>
    <label for="">This task is completed</label>
  <% else %>
    <input type="checkbox">
    <label for="">This task is not completed</label>
  <% end %>
  <br></br>
    <%= link_to "Back to list", tasks_path %>
</div>

